@model ProfileModel


<div class="row">
    <div class="col">
        <h1 class="display-4 border-bottom">Profile</h1>
    </div>
</div>

<div class="row">
    <div class="col-sm-6">

        <p class="small text-center">Bu kısımdan adınızı ve soyadınızı güncelleyebilirsiniz.</p>

        <div class="form-floating mb-3">
            <input type="text" asp-for="Name" placeholder="name" class="form-control" />
            <label asp-for="Name"></label>
        </div>

        <div class="form-floating mb-3">
            <input type="text" asp-for="Surname" placeholder="surname" class="form-control" />
            <label asp-for="Surname"></label>
        </div>

        <div>
            <button type="submit" class="btn btn-primary">
                <i class="fa fa-save me-2"></i>Save
            </button>
        </div>
    </div>
</div>